<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <EditText android:id="@+id/number"  android:nextFocusDown="@+id/expMonth" android:nextFocusRight="@+id/expMonth" android:nextFocusForward="@+id/expMonth" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner android:id="@+id/expMonth" android:layout_width="200dp" android:layout_height="wrap_content"  android:nextFocusForward="@+id/expYear" />

        <Spinner android:id="@+id/expYear" android:layout_width="200dp" android:layout_height="wrap_content" android:nextFocusForward="@+id/cvc" />

        <EditText android:id="@+id/cvc" android:layout_width="200dp" android:layout_height="wrap_content" android:nextFocusForward="@+id/save" />

    </LinearLayout>

    <Button android:id="@+id/save" android:layout_width="200dp" android:layout_height="wrap_content"/>

</LinearLayout>